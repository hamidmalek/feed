<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malek.hamid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppMainTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_page_title"
            android:theme="@style/LoginPageTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StatScreenFragment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_stat_screen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ActLevelActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_main" >
        </activity>
        <activity
            android:name=".DailyLogActivity"
            android:label="@string/activity_daily_log" >
        </activity>
        <activity
            android:name=".GoalActivity"
            android:label="@string/activity_daily_log" >
        </activity>
    </application>

</manifest>